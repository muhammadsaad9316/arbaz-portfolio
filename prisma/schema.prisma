generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model Project {
  id          Int      @id @default(autoincrement())
  title       String
  category    String
  description String
  color       String
  imageUrl    String?  @default("")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model OverlayContent {
  id              Int      @id @default(autoincrement())
  introTitle1     String
  introTitle2     String
  introRole       String
  craftPrefix     String
  craftHighlight  String
  craftSuffix     String
  visionPrefix    String
  visionHighlight String
  visionSuffix    String
  updatedAt       DateTime @updatedAt
}

model About {
  id        Int      @id @default(autoincrement())
  heading   String
  text      String
  stats     Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Skill {
  id        Int      @id @default(autoincrement())
  category  String
  items     String[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Experience {
  id          Int      @id @default(autoincrement())
  year        String
  role        String
  company     String
  description String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Contact {
  id        Int      @id @default(autoincrement())
  heading   String
  text      String
  email     String
  socials   Json
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
